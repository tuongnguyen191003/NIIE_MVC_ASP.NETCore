@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "MyOrders";
    Layout = "_Layout";
}

<section class="orders_section section_space">
    <div class="container">
        <h2>My Orders</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Payment Method</th>
                    <th>Total Items</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy ")</td>
                        <td>@order.PaymentMethod</td>
                         <td>@order.OrderDetails.Count()</td>
                        <td>@order.OrderDetails.Sum(od => od.Price * od.Quantity).ToString("C")</td> 
                        <td>
                            <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-primary">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


