    display: flex;
    justify-content: space-between;
    width: 120px;
}

.star-rating input[type="checkbox"] {
    display: none;
}

.star-rating label {
    font-size: 24px;
    color: #ccc;
    cursor: pointer;
    margin-right: 5px;
}

.star-rating label.fa-solid {
    color: #ffd700;
}

.star-rating label.fa-regular {
    color: #ccc;
}


</style>



