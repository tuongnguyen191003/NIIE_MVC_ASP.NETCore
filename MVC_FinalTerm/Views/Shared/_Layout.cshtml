                                    </div>
                                    <button type="submit" class="search_btn"><i class="far fa-search"></i></button>
                                </div>
                            </form>
                            <div id="search-results"></div>
                        </div>

                        <div class="col col-md-3 col-6">
                            <button type="button" class="cart_btn">
                                <a asp-controller="Cart" asp-action="Index">
